<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="@color/lightGrey"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:text="Moreshet Levona 294"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/MyRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:layout_gravity="center_vertical"
                    android:max="5"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/numberOfRatings"
                    android:layout_width="wrap_content"
                    android:text="(110)"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/priceText"
            android:layout_width="170dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="15â‚ª\nper hour"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_height="match_parent" />

    </LinearLayout>

        <TextView
            android:id="@+id/availableTimeText"
            android:layout_width="match_parent"
            android:text="Available Time: 11:00 - 18:00"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="match_parent"
            android:text="500 meters from destination"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/parkingSizeText"
            android:layout_width="match_parent"
            android:text="Big parking"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/gateText"
            android:layout_width="match_parent"
            android:text="Parking with no gate"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/parkingDescriptionText"
            android:layout_width="match_parent"
            android:text="Go in to the left parking of the two"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/parkingImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Close"
            android:textStyle="bold" />

        <Button
            android:id="@+id/orderButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="order"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>