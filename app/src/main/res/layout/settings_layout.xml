<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:orientation="vertical"
        android:layout_below="@+id/menuButton1"
        android:gravity="top|center"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuButton1"
            android:layout_centerHorizontal="true"
            android:text="Settings"
            android:layout_marginBottom="20dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/colorThemeButton"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_below="@+id/textView2"
            android:text="Color Theme" />
        <Button
            android:id="@+id/fontSizeButton"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_below="@+id/textView2"
            android:text="Font Size" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:text="NOTIFICATIONS" />

        <Button
            android:id="@+id/notificationTestButton"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@color/grey"
            android:layout_below="@+id/textView2"
            android:text="pop notification test" />

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_subdirectory_arrow_left_black_24dp"
            android:textSize="15dp"
            android:background="@color/transparent"
            android:layout_below="@+id/textView2"
            android:text="Logout" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/menuButton1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_black_24dp"
        android:tint="@color/colorPrimaryDark"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>